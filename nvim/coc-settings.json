{
	"coc.preferences.formatOnSaveFiletypes": ["python", "json", "cpp", "cu", "c", "docker", "markdown", "lua", "sh"],
	"python.linting.flake8Enabled": true,
	"python.linting.flake8Args": ["--max-line-length=150", "--ignore=W191,E302,E704,E101,E128,E265,E251,E301,E305,E731"],
	"python.formatting.provider": "autopep8",
	"python.formatting.autopep8Args": ["--max-line-length=150", "--ignore=E101,E11,E121,E127,E128,E129,E301,E302,E402,E704,E265,E251,E305,E731"],
	"clangd.arguments": ["--fallback-style='{UseTab: always, IndentWidth: 4}'"],
	"clangd.checkUpdates": true,
	"java.project.referencedLibraries": ["lib/**/*.jar"],
	"markdownlint.config": { "line_length": false },
	"cSpellExt.enableDictionaries": ["medical-terms", "french", "german"],
	"cSpell.language": "en-GB,fr,de",
	"cSpell.userWords": [
		"INET",
		"asarray",
		"astype",
		"autopep",
		"classif",
		"dtype",
		"imshow",
		"markdownlint",
		"ndarray",
		"njit",
		"numba",
		"numpy",
		"padx",
		"pyplot",
		"scikit",
		"sklearn",
		"tolist",
		"tqdm",
		"xclip",
		"clangd"
	],
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.printWidth": 150
}
