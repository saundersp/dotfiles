{
	"coc.preferences.formatOnSaveFiletypes": [
		"python",
		"json",
		"docker",
		"markdown",
		"lua",
		"sh",
		"bash",
		"json",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"python.linting.flake8Enabled": true,
	"python.linting.flake8Args": ["--max-line-length=150", "--ignore=W191,E302,E704,E101,E128,E265,E251,E301,E305,E731"],
	"javascript.format.semicolons": "insert",
	"typescript.format.semicolons": "insert",
	"python.formatting.provider": "autopep8",
	"python.formatting.autopep8Args": [
		"--max-line-length=150",
		"--ignore=E101,E11,E111,E121,E127,E128,E129,E301,E302,E402,E704,E265,E251,E305,E731,E122,E123,W191"
	],
	"java.project.referencedLibraries": ["lib/**/*.jar"],
	"markdownlint.config": { "line_length": false, "MD010": false },
	"cSpellExt.enableDictionaries": ["medical-terms", "french", "german"],
	"cSpell.language": "en-GB,fr,de",
	"cSpell.userWords": [
		"Fullscreen",
		"Hasklug",
		"INET",
		"alacritty",
		"asarray",
		"astype",
		"autopep",
		"bluez",
		"clangd",
		"classif",
		"darkside",
		"dotfiles",
		"dtype",
		"imgur",
		"imshow",
		"isdir",
		"markdownlint",
		"ndarray",
		"neofetch",
		"neovim",
		"njit",
		"numba",
		"numpy",
		"pacman",
		"padx",
		"picom",
		"polybar",
		"pyplot",
		"scikit",
		"sklearn",
		"tabspaces",
		"tolist",
		"tqdm",
		"xclip",
		"xinit",
		"xorg",
		"xset",
		"ccls",
		"cuda",
		"objc",
		"objcpp"
	],
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.printWidth": 150,
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
			"rootPatterns": [".ccls-root", "compile_commands.json"],
			"initializationOptions": {
				"cache": { "directory": ".ccls-cache" },
				"client": { "snippetSupport": true }
			}
		}
	}
}
