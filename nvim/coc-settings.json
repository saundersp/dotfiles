{
	"coc.preferences.formatOnSaveFiletypes": ["python", "json", "cpp", "docker", "markdown", "lua", "sh"],
	"python.linting.flake8Enabled": true,
	"python.linting.flake8Args": ["--max-line-length=150", "--ignore=W191,E251,E302,E261,E223"],
	"python.formatting.provider": "autopep8",
	"python.formatting.autopep8Args": ["--max-line-length=150", "--ignore=E101,E11,E121,E302"],
	"java.project.referencedLibraries": ["lib/**/*.jar"],
	"markdownlint.config": { "line_length": false },
	"cSpellExt.enableDictionaries": ["medical-terms", "french", "german"],
	"cSpell.language": "en-GB,fr,de",
	"cSpell.userWords": ["njit", "numba", "numpy", "tqdm", "ndarray", "asarray", "dtype", "INET", "padx", "autopep", "xclip"],
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.printWidth": 150
}
