set drawbox
set info size

# purge the unclean
cmd remove ${{
	if [ -z $fs ]; then
		rm -fr $f
	else
		IFS=':'; echo $fs | tr " " "\n"
		echo 'delete? [y/n]'
		read ans

		[ $ans = 'y' ] && (echo 'deleting files...' && rm -fr $fs) || (echo 'cancelled...')
	fi
}}

map d
map dd delete
map dD push :remove
map dc cut
map <esc> quit
